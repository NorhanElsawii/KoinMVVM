<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_from_network"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp" />

    <TextView
        android:id="@+id/tv_from_database"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_go_to_list"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:text="@string/go_to_movie_list" />

    <Button
        android:id="@+id/btn_switch_language"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:text="@string/switch_language" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_current_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>